# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# 4 space indentation
[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# 2 space indentation for .travis.yml and package.json
[{.travis.yml},package.json]
indent_style = space
indent_size = 2

[syntaxes/csharp.json]
indent_style = space
indent_size = 2